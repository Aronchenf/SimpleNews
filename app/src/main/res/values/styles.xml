<resources>

    <style name="content_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_40</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingRight">@dimen/dp_40</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
    </style>

    <style name="video" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/video_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/video_exit</item>
    </style>

    <style name="about_fragment_animation" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fragmentCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:fragmentOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:fragmentOpenExitAnimation">@anim/slide_in_left</item>
        <item name="android:fragmentCloseExitAnimation">@anim/slide_in_right</item>
    </style>
    <!--圆角图片样式-->
    <style name="roundedCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_4</item>
    </style>

    <style name="title" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="CityManage" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
