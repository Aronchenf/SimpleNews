<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/bg_mine"
            android:scaleType="fitXY"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mine_host_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_black"
            android:layout_margin="@dimen/dp_20"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_mine"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/dog"
            app:shapeAppearance="@style/roundedCornerStyle"
            android:layout_marginTop="260dp"
            android:layout_marginStart="@dimen/dp_10"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="狗子"
            android:layout_below="@id/iv_mine"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"/>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_below="@id/name_mine"
            android:background="@color/light_gray"
            android:layout_marginTop="@dimen/dp_20"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_page"
            android:layout_below="@id/line1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_15"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mine_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:autoLink="web"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/web_host"/>
    </RelativeLayout>
</layout>
